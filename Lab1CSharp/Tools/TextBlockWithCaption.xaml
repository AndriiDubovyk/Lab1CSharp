<UserControl x:Class="Lab1CSharp.Tools.TextBlockWithCaption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab1CSharp.Tools"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="textBlockWithCaption">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="TbCaption" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,5,2" Text="Caption"/>
        <TextBlock Name="TbValue" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Margin="5,0,5,5" Text=""/>
    </Grid>
</UserControl>
